<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pad.UIResources">
    <SolidColorBrush x:Key="RegionBackground">#FFE7A3</SolidColorBrush>
    <SolidColorBrush x:Key="ControlForeground">#e3b949</SolidColorBrush>
    <SolidColorBrush x:Key="ControlBackground">#171618</SolidColorBrush>
    <SolidColorBrush x:Key="BoardBackground">#F7EDD1</SolidColorBrush>
    <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABAdB3"/>
    <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#FF7EB4EA"/>
    <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#FF569DE5"/>
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#e3b949"></Setter>
        <Setter Property="FontSize" Value="28"></Setter>
    </Style>
</ResourceDictionary>