<Window x:Class="Pad.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Pad"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300"
        Width="300" Height="300"
        Cursor="Arrow" WindowState="Normal" 
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <TextBlock Text="设置模板名称" VerticalAlignment="Top" Margin="50" HorizontalAlignment="Center" Foreground="White"></TextBlock>
        <TextBox x:Name="tb" VerticalAlignment="Center" Margin="29,126,27,142" Height="32"></TextBox>
        <Button x:Name="btnn_OK" Content="确定" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnn_OK_Click" Margin="0,0,27,64" Width="52"></Button>
        <Button x:Name="btnn_Cancel" Content="取消" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Click="btnn_Cancel_Click" Margin="29,0,0,64" Width="49"></Button>
    </Grid>
</Window>
