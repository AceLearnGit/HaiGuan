<UserControl x:Class="Screen.SingleScreenItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Screen"
             mc:Ignorable="d" 
             x:Name="self"
             xmlns:form="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             d:DesignHeight="300" d:DesignWidth="300"
             BorderBrush="Black"
             >
    <Border x:Name="border" BorderBrush="{Binding ElementName=self,Path=BorderBrush}" BorderThickness="1" Background="Green">
        <WindowsFormsHost x:Name="windowsFormsHost">
            <!--<form:WebBrowser x:Name="child" ScriptErrorsSuppressed="True" IsWebBrowserContextMenuEnabled ="False"></form:WebBrowser>-->
        </WindowsFormsHost>
    </Border>
</UserControl>
